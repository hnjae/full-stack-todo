#!/usr/bin/env -S just --justfile

run-db:
  podman run \
    --name="todo-dev-db" \
    --rm \
    --replace \
    -e "POSTGRES_USER=devuser" \
    -e "POSTGRES_PASSWORD=devpasswrod" \
    -p '5432:5432/tcp' \
    -v "todo-postgres:/var/lib/postgresql/data" \
    "docker.io/postgres:16"

db-seed:
  ts-node prisma/seed.ts
